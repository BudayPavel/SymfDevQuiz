<html>
<head>
    <title>Quiz</title>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/home-page/css/main.css">

</head>
<body>
<header>
    <div class="fixed-top"></div>
    <div class="logo"><img src="/home-page/img/logo.png"></div>
    <div class="top-menu">
    </div>
</header>
<div class="content">
    <div class="left">
        <h1>Start right now!</h1>
        <div class="button">
            <a href="{{ path('authorize') }}">Login/Register</a>
        </div>
    </div>
    <div class="table">
        <h1>Top users</h1>
        <table>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Points</th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.Firstname }}</td>
                    <td>{{ user.Surname }}</td>
                    <td>{{ user.Answers }}</td>
                </tr>
            {% endfor %}
        </table>

    </div>
</div>

</body>
</html>