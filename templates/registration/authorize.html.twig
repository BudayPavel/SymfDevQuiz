{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<br><br>

<form action="/authorize/signin" method="post">
    {{ form_row(lform.email) }}
    {{ form_row(lform.password) }}
    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        #}
    <input type="hidden" name="_target_path" value="/admin" />


    {{ form_row(lform.submit) }}
</form>

<br><br>

<form action="/authorize/signup" method="post">
    {{ form_widget(rform) }}
</form>

