{% extends 'main.html.twig' %}

{% block menuactive %}
    <li id="user">
        <a>User</a>
    </li>
    <li id="quiz">
        <a>Quiz</a>
    </li>
    <li id="question">
        <a>Question</a>
    </li>
{% endblock %}

{% block exit %}
    <div class="right">
        <ul>
            <li>
                <a href="{{ path('main') }}">To site</a>
            </li>
        </ul>
    </div>

{% endblock %}

{% block pagecontent %}
    <div class="ContentLayout">
        <div class="searchBlock" id="entities-grid">

        </div>
    </div>
{% endblock %}

{% block scripts %}
    $(document).ready(function () {
    $("#entities-grid").ajaxgrid({
    'url':'http://quiz.dev/ajax/users',
    'table': 'user',
    'showFields':['id','email','firstName','lastName','roles','active'],
    'filterableFields':['email','firstName','lastName'],
    'sortableFields':['id','email','firstName','lastName']
    });
    });

    $('#user').click(function () {
    $("#entities-grid").empty();
    $("#entities-grid").ajaxgrid({
    'url':'http://quiz.dev/ajax/users',
    'table':'user',
    'showFields':['id','email','firstName','lastName','roles','active'],
    'filterableFields':['email','firstName','lastName'],
    'sortableFields':['id','email','firstName','lastName']
    });
    });

    $('#quiz').click(function () {
    $("#entities-grid").empty();
    $("#entities-grid").ajaxgrid({
    'url':'http://quiz.dev/ajax/quiz',
    'table':'quiz',
    'showFields':['id','name','active','date'],
    'filterableFields':['name','date'],
    'sortableFields':['id','name','date']
    });
    });

    $('#question').click(function () {
    $("#entities-grid").empty();
    $("#entities-grid").ajaxgrid({
    'url':'http://quiz.dev/ajax/question',
    'table':'question',
    'showFields':['id','text'],
    'filterableFields':['text'],
    'sortableFields':['id','text']
    });
    });
{% endblock %}
